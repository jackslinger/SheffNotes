- content_for :title, @course.title

.container
  .toolbar-desktop
    .row
      .pull-left.text-left
        = link_to @course.department, :class => 'btn' do
          = fa_icon 'chevron-left'
          Back
    .clearfix

  .row
    %ul.list-group
      - @course.notes.each do |note|
        = render :partial => 'notes/note', :locals => {:note => note}

.add-btn-offset

.add-btn
  = link_to new_note_path(course: @course.id) do
    %i{class: "fa fa-plus", style: "font-size:40px;"}
    -# = image_tag '/images/add-btn.png', :class => 'img-circle'
